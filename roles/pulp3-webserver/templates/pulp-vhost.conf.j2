<VirtualHost *:80>
  ServerName {{ ansible_nodename }}

  ## Vhost docroot
  DocumentRoot {{ pulp_webserver_static_dir }}

  <Directory "{{ pulp_webserver_static_dir }}">
    Options SymLinksIfOwnerMatch
    AllowOverride None
    Require all granted
  </Directory>

  ## Logging
  ErrorLog "/var/log/httpd/pulp_error.log"
  ServerSignature Off
  CustomLog "/var/log/httpd/pulp_access.log" combined

  ## Proxy rules
  ProxyRequests Off
  ProxyPreserveHost Off
  ProxyPass /pulp/api http://localhost:8000/pulp/api
  ProxyPassReverse /pulp/api http://localhost:8000/pulp/api
  ProxyPass /pulp/content http://{{ pulp_content_host }}/pulp/content
  ProxyPassReverse /pulp/content http://{{ pulp_content_host }}/pulp/content

  ## Server aliases
  ServerAlias pulp3

</VirtualHost>
